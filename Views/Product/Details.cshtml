@model ToyStore.Models.Product

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid" />
    </div>
    <div class="col-md-6">
        <h2>@Model.Name</h2>
        <h4>Rs. @Model.Price</h4>
        <p>Category: <strong>@Model.Category?.Name</strong></p>
        <a href="/Cart/Add/@Model.Id" class="btn btn-primary">
            <i class="fas fa-cart-plus"></i> Add to Cart
        </a>
    </div>
</div>
