@model ToyStore.Models.Product
@{
    ViewData["Title"] = "Delete Toy";
}

<h2 class="text-danger mb-4">🗑️ Delete Toy</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete the toy:</p>
    <h4 class="fw-bold">“@Model.Name”</h4>
    <p><strong>Price:</strong> Rs. @Model.Price</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><img src="@Model.ImageUrl" width="150" /></p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
