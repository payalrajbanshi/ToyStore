@model ToyStore.Models.Product
@{
    ViewData["Title"] = "Edit Toy";
    var categories = ViewBag.Categories as List<ToyStore.Models.Category>;
}

<h2 class="mb-4">‚úèÔ∏è Edit Toy</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Toy Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price (Rs.)</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-select">
            <option value="">-- Select Category --</option>
            @foreach (var category in categories)
            {
                <option value="@category.Id" selected="@(Model.CategoryId == category.Id)">
                    @category.Name
                </option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">üíæ Update</button>
    <a asp-action="Index" class="btn btn-secondary">‚Ü©Ô∏è Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
